@{
    ViewData["Title"] = "Delete Transportation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model TripPlanet.Models.Transportation
<div class="thisbackground">
    <h3>Are you sure you want to delete this transportation?</h3>
    <p>You cannot undo this action.</p>
    <br />
    @using (Html.BeginForm())
    {
        <input type="submit" value="Delete" class="waves-effect waves-light btn red lighten-1" />
    }
    @Html.ActionLink("Back to Transportation", "Details", new { id = Model.TransportationId })
</div>
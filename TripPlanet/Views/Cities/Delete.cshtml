@{
    ViewData["Title"] = "Delete City";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model TripPlanet.Models.City
<h2>Are you sure you want to delete this city: @Model.Name?</h2>
<p>This will delete all details, activites, lodging, and transportation for this city and you cannot undo this action.</p>
<hr />
@using (Html.BeginForm())
{
    <input type="submit" value="Delete" />
}
@Html.ActionLink("Back to City", "Details", new { id = Model.CityId })
@{
    ViewData["Title"] = "Create a Trip";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model TripPlanet.Models.Trip
<div class="container">
    <h2>Create a New Trip</h2>
    <hr />
    <div class="form">
        @using (Html.BeginForm())
        {
            @Html.LabelFor(model => model.Name, new { @class = "labels" })
            @Html.TextBoxFor(model => model.Name, new { @required = "true" })
            <br /><br />
            @Html.LabelFor(model => model.StartCity, new { @class = "labels" })
            @Html.TextBoxFor(model => model.StartCity, new { @required = "true" })
            <br /><br />
            @Html.LabelFor(model => model.BeginDate, new { @class = "labels" })
            @Html.EditorFor(model => model.BeginDate, new { @required = "true" })
            <br /><br />
            @Html.LabelFor(model => model.EndDate, new { @class = "labels" })
            @Html.EditorFor(model => model.EndDate, new { @required = "true" })
            <br /><br />
            @Html.LabelFor(model => model.Budget, new { @class = "labels" })
            @Html.TextBoxFor(model => model.Budget, new { @required = "true" })
            <br /><br />
            @Html.LabelFor(model => model.Public, new { @class = "labels" })
            @Html.EditorFor(model => model.Public, new { @required = "true" })
            <br /><br />
            <input type="submit" value="Create trip" class="btn btn-default" />
        }
    </div>
    <br />
    <p>@Html.ActionLink("Back to trips", "Index")</p>
</div>
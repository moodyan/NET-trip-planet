@{
    ViewData["Title"] = "Delete Trip";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model TripPlanet.Models.Trip
<h2>Are you sure you want to delete this trip: @Model.Name?</h2>
<p>This will delete all details for your trip and you cannot undo this action.</p>
<hr />
@using (Html.BeginForm())
{
    <input type="submit" value="Delete" />
}
@Html.ActionLink("Back to All Trips", "Index")
@{
    ViewData["Title"] = "Delete Activity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model TripPlanet.Models.Activity
<h2>Are you sure you want to delete this activity: @Model.Name?</h2>
<p>You cannot undo this action.</p>
<hr />
@using (Html.BeginForm())
{
    <input type="submit" value="Delete" />
}
@Html.ActionLink("Back to Activity", "Details", new { id = Model.ActivityId})
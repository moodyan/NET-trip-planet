@{
    ViewData["Title"] = "Delete Activity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model TripPlanet.Models.Activity
<h3>Are you sure you want to delete this activity: @Model.Name?</h3>
<p>You cannot undo this action.</p>
<br />
@using (Html.BeginForm())
{
    <input type="submit" value="Delete" class="waves-effect waves-light btn red lighten-1"/>
}
@Html.ActionLink("Back to Activity", "Details", new { id = Model.ActivityId})
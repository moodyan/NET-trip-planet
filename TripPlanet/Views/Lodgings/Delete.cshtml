@{
    ViewData["Title"] = "Delete Lodging";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model TripPlanet.Models.Lodging
<h2>Are you sure you want to delete this lodging: @Model.Name?</h2>
<p>You cannot undo this action.</p>
<hr />
@using (Html.BeginForm())
{
    <input type="submit" value="Delete" />
}
@Html.ActionLink("Back to Lodging", "Details", new { id = Model.LodgingId })
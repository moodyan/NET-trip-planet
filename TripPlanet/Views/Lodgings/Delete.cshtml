@{
    ViewData["Title"] = "Delete Lodging";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model TripPlanet.Models.Lodging
<h4>Are you sure you want to delete this lodging: @Model.Name?</h4>
<p>You cannot undo this action.</p>
<br />
@using (Html.BeginForm())
{
    <input type="submit" value="Delete" class="waves-effect waves-light btn red lighten-1" />
}
@Html.ActionLink("Back to Lodging", "Details", new { id = Model.LodgingId })
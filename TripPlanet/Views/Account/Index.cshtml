@{
    ViewData["Title"] = "Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using System.Security.Claims

@if (User.Identity.IsAuthenticated)
{
    <p>Hello @User.Identity.Name!</p>
    @Html.ActionLink("Account Details", "Details", "Account")
    
    @Html.ActionLink("Log Out", "LogOff", "Account")
    }
    else
    {
    <br /><br /><br />
    <button class="register waves-effect waves-light btn-large">REGISTER</button>
    <button class="login waves-effect waves-light btn-large">LOGIN</button>
    <div id="register-form"></div>
    <div id="login-form"></div>
}
<script type="text/javascript">
    $(document).ready(function () {
        $('#register-form').hide();
        $('.register').click(function () {
            $.ajax({
                type: 'GET',
                dataType: 'html',
                url: '@Url.Action("RegisterLogin", "Account")',
                success: function (result) {
                    $('.login').show();
                    $('#login-form').hide();
                    $('#register-form').html(result).toggle();
                    $('.register').hide();
                }
            });
        });
        $('#login-form').hide();
        $('.login').click(function () {
            $.ajax({
                type: 'GET',
                dataType: 'html',
                url: '@Url.Action("Login", "Account")',
                success: function (result) {
                    $('.register').show();
                    $('#register-form').hide();
                    $('#login-form').html(result).toggle();
                    $('.login').hide();
                }
            });
        });
    });
</script>